pipeline
{
	agent any
	stages {
		stage('Checkout') {
			steps {
				  checkout scm
				  }
		}
		
		stage('Build') {
			when  {
				   expression { params.Build }
			      }
			steps {
					powershell -NoProfile -ExecutionPolicy Bypass '.\\build\\build.ps1 $env:BUILD_NUMBER'
				  }
		}

		stage('Test') {
			when  {
				   expression { params.Test }
			      }
			steps 
				  {
					powershell -NoProfile -ExecutionPolicy Bypass '.\\build\\test.ps1'
				  }
		}
	}   
}